#include<stdio.h>
int main()
{
	int a[10],i,n,max,min,sum,diff;
	printf("enter the no of elements");
	scanf("%d",&n);
	printf("enter the array elements");
	for(i=0;i<n;i++)
	{
	scanf("%d",&a[i]);
    }
    max=a[0];
    min=a[0];
    for(i=0;i<n;i++)
    {
    if(a[i]>max)
    {
    	max=a[i];
     }
	else if(a[i]<min)
	{
	      min=a[i];
	}

   }
   	printf("min=%d and max=%d",min,max);
     sum=max+min;
     printf("\n sum=%d",sum);
     diff=max-min;
     printf(" \n difference=%d",diff);
}
